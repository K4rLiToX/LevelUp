<resources>
    <!-- Base application theme. -->
    <style name="Theme.LevelUp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cta_500</item>
        <item name="colorSecondaryContainer">@color/cta_500</item>
        <item name="colorOnSecondary">@color/secondary_500</item>
        <item name="colorOnSecondaryContainer">@color/secondary_500</item>

        <item name="colorOnBackground">@color/secondary_500</item>

        <item name="colorSurface">@color/secondary_500</item>
        <item name="colorSurfaceVariant">@color/secondary_500</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>

        <item name="actionMenuTextColor">?colorOnSurface</item>
        <item name="android:actionMenuTextColor">?colorOnSurface</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="floatingActionButtonPrimaryStyle">@style/Widget.LevelUp.FloatingActionButton
        </item>
        <item name="materialButtonStyle">@style/Widget.LevelUp.IconButton.Filled</item>

        <item name="bottomNavigationStyle">@style/Widget.LevelUp.BottomNavigation</item>
        <item name="toolbarStyle">@style/Widget.LevelUp.Toolbar</item>
        <item name="tabStyle">@style/Widget.LevelUp.TabLayout</item>
        <item name="materialCardViewStyle">@style/Widget.LevelUp.CardView</item>
        <item name="textInputStyle">@style/Widget.LevelUp.TextInputLayout</item>
        <item name="materialSwitchStyle">@style/Widget.LevelUp.Switch</item>
    </style>
</resources>