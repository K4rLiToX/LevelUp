<resources>
    <!-- Base application theme. -->
    <style name="Theme.LevelUp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/secondary_500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cta_500</item>
        <item name="colorSecondaryContainer">@color/cta_500</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnSecondaryContainer">@color/black</item>

        <item name="colorOnBackground">@color/black</item>

        <item name="colorSurface">@color/secondary_500</item>
        <item name="colorOnSurface">@color/white</item>
        <item name="colorOnSurfaceVariant">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowLightStatusBar">false</item>

        <item name="floatingActionButtonPrimaryStyle">@style/Widget.LevelUp.FloatingActionButton</item>
        <item name="materialButtonStyle">@style/Widget.LevelUp.IconButton.Filled</item>

        <item name="bottomNavigationStyle">@style/Widget.LevelUp.BottomNavigation</item>
    </style>
</resources>